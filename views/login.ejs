<%- include('./partials/head') %>

</head>

<body class="body-categoria">
    <%- include('./partials/header') %>


    <div class="uk-section ">

    <h1 class="uk-text-center"><%= title %> </h1>

    <div class="uk-container  uk-flex uk-flex-center">
        
        <form action="/usuario/loginCheck" method="post" class="uk-background-secondary uk-width-1-3 uk-flex uk-flex-center uk-padding-small">

            <div class="uk-margin uk-width-1-1">
                <div class="uk-inline uk-width-1-1">
                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                    <input class="uk-input" type="text" placeholder="Nombre de usuario | Email" name="nombre"> 
                </div>
            <div class="uk-margin uk-width-1-1">
                <div class="uk-inline uk-width-1-1">
                    <span class="uk-form-icon" uk-icon="icon: lock"></span>
                    <input class="uk-input" type="password" placeholder="Contraseña" name="password"> 
                </div>
            </div>
            <div class="uk-margin-top uk-width-1-1 uk-flex uk-flex-center">
                <div class="uk-margin uk-width-1-4 uk-flex uk-flex-middle uk-flex-center uk-flex-between">
                    <label style="color: white;" for="recordar">Recordar</label>
                    <input class="uk-checkbox" type="checkbox" name="recordar" id="recordar"> 
                </div>
            </div>

            <button class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Ingresar</button>
            <a href="/usuario/registro" class="uk-button uk-button-secondary uk-width-1-1">Registrarse</a>

        </form>
    

    </div>
</div>

<% if (error == 'usuario') { %>
    <script type="text/javascript">
        UIkit.notification({
            message: "<span uk-icon=\'icon: close\'></span> El nombre de usuario o email no está registrado",
            status: 'danger',
            pos: 'top-center',
            timeout: 5000
        });
</script>

<% } else if(error == 'password'){ %>
    <script type="text/javascript">
        UIkit.notification({
            message: "<span uk-icon=\'icon: close\'></span> Contraseña incorrecta",
            status: 'danger',
            pos: 'top-center',
            timeout: 5000
        });
    </script>
<% } %>


</body>

</html>