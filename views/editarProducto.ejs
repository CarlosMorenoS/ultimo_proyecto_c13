<%- include('./partials/head') %>
<script src="/javascripts/agregarProducto.js"></script>
</head>

<body class="body-categoria">
    <%- include('./partials/header') %>


    <div class="uk-section ">

        <h1 class="uk-text-center"><%= title %> </h1>

        <div class="uk-container  uk-flex uk-flex-center">

            <form action="/productos/editar/<%= producto.id %>" method="POST"
                class="uk-background-secondary uk-width-1-3 uk-flex uk-flex-center uk-padding-small">

                <div class="uk-margin uk-width-1-1">
                    <div class="uk-inline uk-width-1-1">
                        <span class="uk-form-icon" uk-icon="icon: tag"></span>
                        <input class="uk-input" type="text" placeholder="Nombre del producto" name="nombre" value="<%= producto.nombre %>">
                    </div>
                    <div class="uk-margin uk-width-1-1">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: hashtag"></span>
                            <input class="uk-input" type="text" placeholder="Marca" name="marca" value="<%= producto.marca %>">
                        </div>
                    </div>
                    <div class="uk-margin uk-width-1-1">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: image"></span>
                            <input class="uk-input" type="text" placeholder="Url de la imagen" name="imagen" value="<%= producto.img_url %>">
                        </div>
                    </div>
                    <div class="uk-margin uk-width-1-1">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon">$</span>
                            <input class="uk-input" type="text" placeholder="Precio" name="precio" value="<%= producto.precio %> ">
                        </div>
                    </div>
                    <div class="uk-margin uk-width-1-1">
                        <div class="uk-inline uk-width-1-1">
                            <select class="uk-select" name="categoria">
                                <% if (producto.categoria_id == 1) { %>
                                    <option value="1" selected>Celulares</option>
                                    <option value="2">Computadoras</option>
                                    <option value="3">Tablets</option>
                                    <option value="4">Smartwatch's</option>
                                 <% } else if (producto.categoria_id == 2) { %>
                                    <option value="1">Celulares</option>
                                    <option value="2" selected>Computadoras</option>
                                    <option value="3">Tablets</option>
                                    <option value="4">Smartwatch's</option>
                                    <% } else if (producto.categoria_id == 3) { %>
                                    <option value="1">Celulares</option>
                                    <option value="2">Computadoras</option>
                                    <option value="3" selected >Tablets</option>
                                    <option value="4">Smartwatch's</option>
                                    <% } else { %>
                                    <option value="1">Celulares</option>
                                    <option value="2">Computadoras</option>
                                    <option value="3">Tablets</option>
                                    <option value="4" selected>Smartwatch's</option>
                                <% } %>

                            </select>
                        </div>
                    </div>

                    <button class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Editar</button>

            </form>


        </div>
    </div>


    <%# if (error == true) { %>
    <!-- <script type="text/javascript">
              UIkit.notification({
                    message: "<span uk-icon=\'icon: close\'></span> El nombre de usuario o email ya existe",
                    status: 'danger',
                    pos: 'top-center',
                    timeout: 5000
                });
        </script> -->
    <%# } %>
</body>

</html>