<%- include('./partials/head') %>
<script src="/javascripts/agregarProducto.js"></script>
</head>

<body class="body-categoria">
    <%- include('./partials/header') %>


    <div class="uk-section ">        
        
        <h1 class="uk-text-center"><%= title %> </h1>

        <div class="uk-container  uk-flex uk-flex-center">
            
            <form  action="/productos/agregarProducto" method="POST"
            class="uk-background-secondary uk-width-1-3 uk-flex uk-flex-center uk-padding-small">
            
            <div class="uk-margin uk-width-1-1">
                <div class="uk-inline uk-width-1-1">
                    <span class="uk-form-icon" uk-icon="icon: tag"></span>
                    <input class="uk-input" type="text" placeholder="Nombre del producto" name="nombre">
                </div>
                <div class="uk-margin uk-width-1-1">
                    <div class="uk-inline uk-width-1-1">
                        <span class="uk-form-icon" uk-icon="icon: hashtag"></span>
                        <input class="uk-input" type="text" placeholder="Marca" name="marca">
                    </div>
                </div>
                <div class="uk-margin uk-width-1-1">
                    <div class="uk-inline uk-width-1-1">
                        <span class="uk-form-icon" uk-icon="icon: image"></span>
                        <input class="uk-input" type="text" placeholder="Url de la imagen" name="imagen">
                    </div>
                </div>
                <div class="uk-margin uk-width-1-1">
                    <div class="uk-inline uk-width-1-1">
                        <span class="uk-form-icon" >$</span>
                        <input class="uk-input" type="text" placeholder="Precio" name="precio">
                    </div>
                </div>
                <div class="uk-margin uk-width-1-1">
                    <div class="uk-inline uk-width-1-1">
                        <select class="uk-select" name="categoria">
                            <option value="" disabled selected="true">Categoria</option>
                            <option value="1">Celulares</option>
                            <option value="2">Computadoras</option>
                            <option value="3">Tablets</option>
                            <option value="4">Smartwatch's</option>
                        </select>
                    </div>
                </div>
                
                <button class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Agregar</button>
                <!-- <a href="/usuario/login" class="uk-button uk-button-secondary uk-width-1-1">login</a> -->
                
            </form>
            
            
        </div>
    </div>

    
    <%# if (error == true) { %>
        <!-- <script type="text/javascript">
              UIkit.notification({
                    message: "<span uk-icon=\'icon: close\'></span> El nombre de usuario o email ya existe",
                    status: 'danger',
                    pos: 'top-center',
                    timeout: 5000
                });
        </script> -->
    <%# } %>
</body>

</html>