<%- include('./partials/head') %>
<script src="/javascripts/registro.js"></script>
</head>

<body class="body-categoria">
    <%- include('./partials/header') %>


    <div class="uk-section ">        
        
        <h1 class="uk-text-center"><%= title %> </h1>

        <div class="uk-container  uk-flex uk-flex-center">
            
            <form id="register-form" action="/usuario/registroCheck" method="post"
            class="uk-background-secondary uk-width-1-3 uk-flex uk-flex-center uk-padding-small">
            
            <div class="uk-margin uk-width-1-1">
                <div class="uk-inline uk-width-1-1">
                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                    <input class="uk-input" type="text" placeholder="Nombre de usuario" name="nombre">
                </div>
                <div class="uk-margin uk-width-1-1">
                    <div class="uk-inline uk-width-1-1">
                        <span class="uk-form-icon" uk-icon="icon: mail"></span>
                        <input class="uk-input" type="email" placeholder="Email" name="email">
                    </div>
                </div>
                <div class="uk-margin uk-width-1-1">
                    <div class="uk-inline uk-width-1-1">
                        <span class="uk-form-icon" uk-icon="icon: lock"></span>
                        <input id="password" class="uk-input" type="password" placeholder="Contraseña" name="password">
                    </div>
                </div>
                <div class="uk-margin uk-width-1-1">
                    <div class="uk-inline uk-width-1-1">
                        <span class="uk-form-icon" uk-icon="icon: lock"></span>
                        <input id="re-password" class="uk-input" type="password" placeholder="Confirmar contraseña" name="re-password">
                    </div>
                </div>
                
                <button class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Registrarse</button>
                <a href="/usuario/login" class="uk-button uk-button-secondary uk-width-1-1">login</a>
                
            </form>
            
            
        </div>
    </div>

    <% if (error == true) { %>
        <script type="text/javascript">
              UIkit.notification({
                    message: "<span uk-icon=\'icon: close\'></span> El nombre de usuario o email ya existe",
                    status: 'danger',
                    pos: 'top-center',
                    timeout: 5000
                });
        </script>
    <% } %>
</body>

</html>